# -*- mode: snippet -*-
# -*- drop foreign key -*-
# name: dfk
# key: dfk
# expand-env: ((yas-indent-line 'fixed) (yas-wrap-around-region 'nil))
# --
if exists(select * from information_schema.referential_constraints where constraint_schema='$1' and constraint_name='FK_$2_$3')
    alter table ${1:dbo}.${2:/*FKtab*/} drop FK_$2_${3:/*UKtab*/};$0